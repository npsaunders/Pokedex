<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('./partials/head.ejs')%>
</head>

<body>
  <div class="body-overlay">
    <!-- ============ HEADER ============ -->
    <%- include('./partials/header.ejs')%>
      <!-- ============ MAIN ============ -->
      <main>
        <div>
          <h1>Pokemons</h1>
          <!-- NEW -->
          <a href="/pokemons/new">New Pokemon</a><br />
          <ul>
            <% for(let i=0; i < pokemons.length; i++) { %>
              <li><a href="/pokemons/<%=i%>">
                  <%= pokemons[i].name %>
                </a></li>
              <!-- DELETE BUTTON -->
              <form action="/pokemons/<%=i%>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE" />
              </form>
              <!-- EDIT -->
              <a href="/pokemons/<%=i%>/edit">Edit</a>
              <% } %>
          </ul>
        </div>
      </main>
      <!-- ============ FOOTER ============ -->
      <%- include('./partials/footer.ejs')%>
  </div>
</body>

</html>